NAME	= fragtrap
# CC 	= clang++
CC 		= c++
CFLAGS	= -Wall -Werror -Wextra -std=c++98
DFLAGS	= -MMD -MF $(@:.o=.d)
RM 		= rm -f
AUTHOR	= hsaadi
DATE	= $(shell date "+%d %B %T")
HASH	= 

################################################################################
#                                 PROGRAM'S SRCS                               #
################################################################################

src = main.cpp ClapTrap.cpp FragTrap.cpp

obj = $(src:.cpp=.o)

################################################################################
#                                 Makefile rules                             #
################################################################################

all: header $(NAME)
	@echo "BOOM ðŸ’¥ðŸ’¥ðŸ’¥ðŸ’¥ðŸ’¥ $(NAME) Compiled! ðŸ’¯ $(DEFAULT)"

$(NAME): $(obj)
	-@$(CC) $(CFLAGS) -o $(NAME) $(obj)

%.o: %.cpp
	-@$(CC) $(CFLAGS) -c $< -o $@

clean: header
	-@$(RM) $(obj)
	@echo "ðŸ§¹ðŸ§¹ðŸ§¹ðŸ§¹ðŸ§¹ðŸ§¹ $(NAME) Cleaned! ðŸ§¹ðŸ§¹ðŸ§¹ðŸ§¹ðŸ§¹ðŸ§¹"

fclean: clean kabylia
	-@$(RM) $(NAME)
	

re: fclean all 

.PHONY: all clean fclean re header

#COLORS
RED = \033[1;31m
YELLOW = \033[1;33m
DEFAULT = \033[0m
COM_COLOR   = \033[0;34m
OBJ_COLOR   = \033[0;36m
OK_COLOR    = \033[0;32m
ERROR_COLOR = \033[0;31m
WARN_COLOR  = \033[0;33m
NO_COLOR    = \033[m

header:
	@printf "%b" "$(OK_COLOR)"
	@echo "        ___  _____ ___  ___       _        "
	@echo "       /   |/ __  \|  \/  |      | |       "
	@echo "      / /| |\`' / /'| .  . | __ _| | _____ "
	@echo "     / /_| |  / /  | |\/| |/ _\` | |/ / _ \\"
	@echo "     \___  |./ /___| |  | | (_| |   <  __/"
	@echo "         |_/\_____/\_|  |_/\__,_|_|\_\___| "

ifneq ($(HASH),)
	@printf "%b" "$(DEFAULT)Name:	$(OBJ_COLOR)$(NAME)@$(HASH)\n"
else
	@printf "%b" "$(DEFAULT)Name:	$(OBJ_COLOR)$(NAME)\n"
endif
	@printf "%b" "$(DEFAULT)Author:	$(OBJ_COLOR)$(AUTHOR)\n"
	@printf "%b" "$(DEFAULT)Date: 	$(OBJ_COLOR)$(DATE)\n\033[m"
	@printf "%b" "$(DEFAULT)CC: 	$(OBJ_COLOR)$(CC)\n\033[m"
	@printf "%b" "$(DEFAULT)Flags: 	$(OBJ_COLOR)$(CFLAGS)\n\033[m"
	@echo

summary:
	valgrind --leak-check=summary --trace-children=yes --track-fds=yes ./$(NAME)

valgrind:
	valgrind --leak-check=full  --show-leak-kinds=all --trace-children=yes --track-fds=yes ./$(NAME)

full:
	valgrind --leak-check=full ./$(NAME)

